[Unit]
Description=Image Visualization 3D Server Service File
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/ImageVisualization3D/Server
ExecStart=/home/ubuntu/ImageVisualization3D/Server/venv/bin/daphne -b 0.0.0.0 -p 8000 ImageVisualization3D.asgi:application
Restart=always
StartLimitInterval=0
RestartSec=30

[Install]
WantedBy=multi-user.target